#!/bin/bash

__build_d=../build
__test_t="${1:2}"
__bin_d=${__build_d}/bin
if [ "${__test_t}" == "" -o "${__test_t}" == "unit" ]
then
  ${__bin_d}/unit_tests

#else if [ "${__test_t}" == "integration" ]
#then
#  ${__build_d}/integration_tests
else
  echo "unknow test type: ${__test_t}"
  exit 1
fi

